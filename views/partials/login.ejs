<% if(user) { %>
    <h3> Welcome Back <%= user.username %></h3>
    <ul class="list-group">
        <li class="list-group-item"><a href="/<%= usertype %>s/classes">My Classes</a></li>
        <% if(usertype) { %>
            <li class="list-group-item"><a href="/classes/create">Create class</a></li>
        <% } %>
        <li class="list-group-item"><a href="/users/logout">Logout</a></li>
    </ul>
<% } else { %>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Student & Instructor Login</h3>
    </div>
    <div class="panel-body">
        <form method="post" autocomplete="false" role="form" action="/users/login">
            <fieldset>
                <div class="form-group">
                    <input class="form-control" autocomplete="false" placeholder="username" name="username" type="text">
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Password" name="password" type="password" value="">
                </div>
                <div class="checkbox">
                    <label>
                        <input name="remember" type="checkbox" value="Remember Me"> Remember Me
                    </label>
                </div>
                <input class="btn btn-lg btn-success btn-block" type="submit" value="Login">
            </fieldset>
        </form>
    </div>
</div>
<% } %>